{
  "compilerOptions": {
    "target": "ES2023",
    "module": "CommonJS",              // (recomendado para Nest)
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "types": ["node", "jest"]          // <-- Incluir jest para tests
  },
  "include": ["src/**/*.ts"]
}
